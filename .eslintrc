{
  "env": {
    "es6": true,
    "jest": true
  },
  "extends": "standard",
  "parser": "babel-eslint",
  "plugins": [ "flowtype", "react" ],
  "rules":{
    "react/jsx-uses-vars": 2,
    "react/jsx-uses-react": 2,
    "no-undef": "off"
  },
  "settings": {
    "flowtype": {
      "onlyFilesWithFlowAnnotation": false
    }
  }
}
